{
  "name": "@hujiayucc/r2ai-mcp",
  "version": "0.0.1",
  "author": "hujiayucc",
  "description": "MCP plugin that proxies tools to R2AIBridge API",
  "bugs": "https://github.com/hujiayucc/r2ai-mcp/issues",
  "homepage": "https://github.com/hujiayucc/r2ai-mcp",
  "type": "module",
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "shx rm -rf dist && tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "r2", "radare2", "r2aibridge"],
  "bin": {
    "r2ai": "dist/index.js"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^24",
    "shx": "^0.3.4",
    "terser": "^5.46.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
